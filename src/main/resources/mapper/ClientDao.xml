<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.xchuiao.projectprocedurems.dao.ClientDao">

    <resultMap type="top.xchuiao.projectprocedurems.entity.Client" id="ClientMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="accId" column="acc_id" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="sex" column="sex" jdbcType="VARCHAR"/>
        <result property="contact" column="contact" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ClientMap">
        select
          id, acc_id, name, sex, contact
        from project_procedure_ms.client
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ClientMap">
        select
          id, acc_id, name, sex, contact
        from project_procedure_ms.client
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAllByClient" resultMap="ClientMap">
        select
            id, acc_id, name, sex, contact
        from project_procedure_ms.client
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="accId != null and accId != ''">
                and acc_id = #{accId}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="sex != null and sex != ''">
                and sex = #{sex}
            </if>
            <if test="contact != null and contact!= ''">
                and contact = #{contact}
            </if>
        </where>

    </select>

    <select id="queryAll" resultMap="ClientMap">
        select
          id, acc_id, name, sex, contact
        from project_procedure_ms.client
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" >
        insert into project_procedure_ms.client(id,acc_id, name, sex, contact)
        values (#{id},#{accId}, #{name}, #{sex}, #{contact})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update project_procedure_ms.client
        <set>
            <if test="accId != null and accId != ''">
                acc_id = #{accId},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="sex != null and sex != ''">
                sex = #{sex},
            </if>
            <if test="contact != null and contact != ''">
                contact = #{contact},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from project_procedure_ms.client where id = #{id}
    </delete>

</mapper>