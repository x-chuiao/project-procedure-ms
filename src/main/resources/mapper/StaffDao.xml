<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.xchuiao.projectprocedurems.dao.StaffDao">

    <resultMap type="top.xchuiao.projectprocedurems.entity.Staff" id="StaffMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="posId" column="pos_id" jdbcType="VARCHAR"/>
        <result property="depId" column="dep_id" jdbcType="VARCHAR"/>
        <result property="accId" column="acc_id" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="age" column="age" jdbcType="INTEGER"/>
        <result property="sex" column="sex" jdbcType="VARCHAR"/>
        <result property="contact" column="contact" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="StaffMap">
        select
          id, pos_id, dep_id, acc_id, name, age, sex, contact
        from project_procedure_ms.staff
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="StaffMap">
        select
          id, pos_id, dep_id, acc_id, name, age, sex, contact
        from project_procedure_ms.staff
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="StaffMap">
        select
          id, pos_id, dep_id, acc_id, name, age, sex, contact
        from project_procedure_ms.staff
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" >
        insert into project_procedure_ms.staff(id,pos_id, dep_id, acc_id, name, age, sex, contact)
        values (#{id},#{posId}, #{depId}, #{accId}, #{name}, #{age}, #{sex}, #{contact})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update project_procedure_ms.staff
        <set>
            <if test="posId != null and posId != ''">
                pos_id = #{posId},
            </if>
            <if test="depId != null and depId != ''">
                dep_id = #{depId},
            </if>
            <if test="accId != null and accId != ''">
                acc_id = #{accId},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="sex != null and sex != ''">
                sex = #{sex},
            </if>
            <if test="contact != null and contact != ''">
                contact = #{contact},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from project_procedure_ms.staff where id = #{id}
    </delete>

</mapper>